# Pulsio - Environment Variables
# Copy this to .env and fill in your values

# Application
APP_URL=https://your-replit-url.repl.co
SESSION_SECRET=your-session-secret-here

# Feature Flags
FEATURE_JOBBER=false  # Set to true to enable Jobber integration
FEATURE_QBO=true      # Set to true to enable QuickBooks integration

# Jobber OAuth (get from https://developer.getjobber.com/)
JOBBER_CLIENT_ID=
JOBBER_CLIENT_SECRET=
JOBBER_REDIRECT_URI=https://your-replit-url.repl.co/api/jobber/callback
JOBBER_WEBHOOK_SECRET=your-webhook-secret

# QuickBooks OAuth
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=https://your-replit-url.repl.co/api/qbo/callback
QUICKBOOKS_ENVIRONMENT=sandbox  # or production

# Database (auto-configured by Replit)
DATABASE_URL=

# Email Service (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# SMS Service (Twilio) - Optional
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe (for subscriptions)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Replit (auto-configured)
REPLIT_DOMAINS=
